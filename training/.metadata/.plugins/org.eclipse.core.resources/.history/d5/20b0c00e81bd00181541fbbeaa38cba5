package com.training.domains;

import java.io.*;
import java.util.TreeSet;

public class Application {
	
	private static boolean writeToTextFile(Restaurant rest){
		boolean status=false;
		PrintWriter writer=null;
		try {
			writer=new PrintWriter(new FileWriter(new File("Restaurants.txt"),true));
			writer.write(rest.toString());
			status=true;
		} catch (Exception e) {
			// TODO: handle exception
			e.printStackTrace();
		}
		finally{
			writer.close();
		}
		return status;
	}
	
	public static TreeSet<Restaurant> readTextFile(){
		TreeSet<Restaurant> restaurants=new TreeSet<>();
		BufferedReader br=null;
		try {
			br=new BufferedReader(new FileReader(new File("Restaurant.txt")));
			String line;
			try {
				while((line=br.readLine())!=null){
					String[] restaurantText=line.split(",");
					Restaurant rest=new Restaurant(restaurantText[0],restaurantText[1],Long.parseLong(restaurantText[2]),Integer.parseInt(restaurantText[3]));
					restaurants.add(rest);
				}
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		} catch (FileNotFoundException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		finally{
			try {
				br.close();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		return restaurants;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Restaurant rest=new Restaurant("McDonalds","Delhi",6548967,5);
	}

}
